<!doctype html>
<html>
	<style>
	html {
		background-color: #1e1e1e;
		color: #eeeeee;
		font-family: sans-serif;
	}

	.blog_name {
		padding: 15px;
		margin: 5px;
		border-color: cyan;
		border-style: solid;
		border-radius: 40px;
		text-align: center;
	}
	.footer-inner {
		padding: 15px;
		border-color: orange;
		border-style: solid;
		border-radius: 40px;
		text-align: center;
		display: flex;
		justify-content: center;
	}
	.footer {
		padding: 0;
		margin: 0;
		position: absolute;
		bottom: 0px;
		left: 0px;
		width: 100vw;
	}
	</style>
	<head>
		<title>{{ blog_name }}</title>
	</head>
	<body>
		<h1 class="blog_name">{{ blog_name }}</h1>
		<li>
		{% for article in articles %}
			<ul>
				<h2><a href="{{ article.page }}">{{ article.name }} - {{ article.date }}</a></h2> 
				<br \>
				{{ article.summary }}
			</ul>
		{% endfor %}
		</li>
		<div class="footer"> <div class="footer-inner"> hello yes this is website </div></div>
		{{ refresh }}
	</body>
</html>
